pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'gitCred', url: 'https://github.com/sujithvarma1992/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['SSHCred']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@172.31.2.105:/home/ec2-user/apache-tomcat-9.0.60/webapps/
                    
                    ssh ec2-user@172.31.2.105 /home/ec2-user/apache-tomcat-9.0.60/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.2.105 /home/ec2-user/apache-tomcat-9.0.60/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
